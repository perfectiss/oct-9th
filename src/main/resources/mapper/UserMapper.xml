<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.bdqn.wk.demo2.mapper.UserMapper">

    <resultMap id="userMap" type="cn.bdqn.wk.demo2.entity.Tbuser">
        <id property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="nickName" column="nick_name"/>
        <result property="password" column="password"/>
    </resultMap>
    <select id="queryUserByUserNameAndPassword" resultMap="userMap" parameterType="cn.bdqn.wk.demo2.entity.Tbuser">
        select * from t_user where user_name = #{userName} and password = #{password};
    </select>
</mapper>
